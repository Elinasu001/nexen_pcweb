

.header-choice-size{
	position: fixed;
	background-color: #831f82;
	top:86px;
	width:100%;
	height:80px;
	z-index:100;
	color:#fff;
	background-image: url(/img/product/choice_size_bg.png);
	background-repeat: no-repeat;
	background-position: 10% 0;
	background-size: 150px;
	@media (max-width: 1800px) {
		background-image: none;;
		// background-position: 80% 0;
	}
	.choice-size-inner{
		width:1180px;
		margin:0 auto;
		overflow: hidden;

		@media (max-width: 1800px) {
			background-image: url(/img/product/choice_size_bg.png);
			background-repeat: no-repeat;
			background-position: 82% 0;
			background-size: 150px;
		}

		ul{
			display: inline-block;
			overflow: hidden;
			float:left;
			li{
				float:left;
				display: inline;
				line-height:80px;
				margin-right:40px;
				position: relative;
				font-size: 20px;
                &:after{
                    content: "";
                    position: absolute;
                    right:-25px;
                    top:50%;
                    margin-top: -5px;;
                    height:5px;
                    width:5px;
                    border-right:2px solid rgba(255,255,255,0.5);
                    border-top:2px solid rgba(255,255,255,0.5);
                    transform: rotate( 45deg );
				}
				
				&.size:after{
                    content: "";
                    position: absolute;
                    right:-25px;
                    top:47%;
                    margin-top: -5px;;
                    height:15px;
                    width:1px;
					border-right:2px solid rgba(255,255,255,0.5);
					border-top:none;
					transform: rotate( 0deg );
				}

				&:last-child:after{
					display: none;
				}
			}


		}

		.btn-box{
			float: right;
			line-height:80px;
		}
	}
}


div.step-nav{
	margin-top: 220px;
	// border:1px solid #ccc;
	background-image: url( /img/product/step_bg.png);
	background-repeat: no-repeat;
	background-position: top;

	ul{
		width: 700px;
		margin:0 auto;
		display: flex;
		justify-content:space-between;

		li{
			position: relative;
			// border:1px solid red;
			top:10px;
			font-size: 16px;
			color: rgb(120, 120, 120);
			text-align: center;
			padding-top: 20px;
			// font-weight:bold;
			&:after{
				// border:1px solid green;
				content: "";
				position: absolute;
				background-image: url( /img/product/step_off.png);
				background-repeat: no-repeat;
				background-position: center center;
				width:11px;
				height:11px;
				top:-15px;
				left:50%;
				margin-left: -5px;
			}

			&.active{
				color:#922491;

				&:after{
					// border:1px solid green;
					content: "";
					position: absolute;
					background-image: url( /img/product/step_on.png);
					background-repeat: no-repeat;
					background-position: center center;
					width:27px;
					height:27px;
					top:-24px;
					left:50%;
					margin-left: -5px;
				}

				
			}
		}
	}
}

